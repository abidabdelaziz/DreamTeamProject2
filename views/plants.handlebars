<div class="fixed-action-btn">
  <a class="btn-large green darken-2" href="/">
    <i class="large material-icons">home</i>
  </a>
</div>

<div class="container-plants ">
    {{!--
    <div class="row">
        <div class="col l12">
            <form>
                <input type="text" name="search" placeholder="Search for your new buddy..">
            </form>
        </div>
    </div> --}}

    <div id="custom-templates">
        <input class="typeahead" type="text" placeholder="Search for Plants" id="top">
    </div>

    <div class="row" id="cards">
        {{#each plant}}
        <div class="col s12 m6 l4" name="{{commonName}} {{scientificName}}">
            <div class="card small">

                <div class="card-image light-blue lighten-5" id="img-plants">
                    <img src="../assets/images/plant.png">
                    <span class="card-title pink-text accent-1-text">{{commonName}}</span>
                </div>

                <div class="card-content">

                    <p>Scientific Name: {{scientificName}}</p>
                    <p>Watering: {{moistUse}}</p>
                    <a class="btn-floating halfway-fab waves-effect waves-light green darken-1" name="{{commonName}}">
                        <i class="material-icons">add</i>
                    </a>
                </div>

            </div>
        </div>
        {{/each}}
    </div>


    <button id="loadMore" class="btn waves-effect waves-light green green darken-1" >Load more +</button>
    {{!--
    <button class="totop" href="#top">Back to top</button> --}}

</div>