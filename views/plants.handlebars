<div class="container-plants ">


    <div class="row">
        <div class="col l12">
            <form>
                <input type="text" name="search" placeholder="Search for your new buddy..">
            </form>
        </div>
    </div>

    <div class="row">
        {{#each plant}}
        <div class="col s12 m6 l4">
            <div class="card small">
                <div class="card-image light-blue lighten-5" id="img-plants">
                    <img src="../assets/images/plant.png">
                    <span class="card-title pink-text accent-1-text">{{commonName}}</span>
                    <a class="btn-floating halfway-fab waves-effect waves-light green darken-1">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                <div class="card-content">
                    <p>Scientific Name: {{scientificName}}</p>
                    <p>Watering: {{moistUse}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <ul class="pagination">
        <li class="disabled">
            <a href="#!">
                <i class="material-icons">chevron_left</i>
            </a>
        </li>
        <li class="active">
            <a href="#!">1</a>
        </li>
        <li class="waves-effect">
            <a href="#!">2</a>
        </li>
        <li class="waves-effect">
            <a href="#!">3</a>
        </li>
        <li class="waves-effect">
            <a href="#!">4</a>
        </li>
        <li class="waves-effect">
            <a href="#!">5</a>
        </li>
        <li class="waves-effect">
            <a href="#!">
                <i class="material-icons">chevron_right</i>
            </a>
        </li>
    </ul>

</div>